@using TestSample.Pages.Intro

<MudPaper Elevation="0" Height="0%">
    <MudToolBar Style="height: 0px !important;">
        <MudMenu Dense=true LockScroll=true>
            <ActivatorContent>
                <MudChip Icon="@Icons.Material.Outlined.Menu" Color="Color.Success" Size="Size.Medium">Blazor TrueSPA</MudChip>
            </ActivatorContent>
            <ChildContent>
                @if (Route?.AppId == 1)
                {
                    <MudMenuItem Icon="@Icons.Material.Outlined.AddLink">New student record</MudMenuItem>
                    <MudMenuItem Icon="@Icons.Material.Outlined.AddLink">New result record</MudMenuItem>
                    <MudDivider />
                    <MudMenuItem Icon="@Icons.Material.Outlined.AddLink">Publish result</MudMenuItem>
                }
                else if (Route?.AppId == 0)
                {
                    <MudMenuItem Icon="@Icons.Material.Outlined.SpaceDashboard">Start Page</MudMenuItem>
                    <MudMenuItem Icon="@Icons.Material.Outlined.DocumentScanner">Documentation</MudMenuItem>
                }
                else if (Route?.AppId == 2)
                {
                    <MudMenuItem Icon="@Icons.Material.Outlined.AddLink">Add new product</MudMenuItem>
                    <MudMenuItem Icon="@Icons.Material.Outlined.AddLink">View earnings</MudMenuItem>
                }

                <MudMenuItem Icon="@Icons.Material.Outlined.VerifiedUser" IconColor="Color.Success"
                             ontouchstart="event.preventDefault();" OnTouch="() => OnMenuItemClicked(nameof(SwitchApps))"
                             OnClick="() => OnMenuItemClicked(nameof(SwitchApps))">Switch Apps</MudMenuItem>
            </ChildContent>
        </MudMenu>

    </MudToolBar>
</MudPaper>